<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:field="urn:jsptagdir:/WEB-INF/tags/form/fields" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:page="urn:jsptagdir:/WEB-INF/tags/form" version="2.0">
    <jsp:directive.page contentType="text/html;charset=UTF-8"/>
    <jsp:output omit-xml-declaration="yes"/>
    <h1>Hello</h1>
    <c:forEach items="${scale.answers}" var="item">
    <c:out value="${item.id}" />
    </c:forEach>
     <page:list id="pl_com_jieyou_adhd_domain_Scale" items="${scale.questions}" z="r/tyaIBJbsPXxtBbr3OeTwaErks=">
        
    <table>
     <c:set var="currentDescription" value="‘’" />
    <c:forEach items="${scale.questions}" var="question">
      <c:if test="${question.sectionDescription!=currentDescription}">
      <thead>
        <tr>
          <th>
              <c:out value="${question.sectionDescription}" />
            </th>
          <c:forEach items="${scale.answers}" var="answer">
            <th>
              <c:out value="${answer.answerDescription}" />
            </th>
          </c:forEach>
          
        </tr>
      </thead>
    </c:if>
    <tr><td><c:out value="${question.questionContent}" /></td>
           <c:forEach items="${scale.answers}" var="answer">
            <th>
              <c:out value="${answer.score}" />
            </th>
          </c:forEach>
    </tr>
    
      <c:set var="currentDescription" value="${question.sectionDescription}" />
    </c:forEach>
    </table>
    </page:list>
   
</div>
